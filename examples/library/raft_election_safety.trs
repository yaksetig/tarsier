protocol RaftElectionSafety {
    params n, t, f, gst;
    resilience: n > 3*t;
    adversary {
        model: omission;
        bound: f;
        timing: partial_synchrony;
        gst: gst;
        values: sign;
    }

    message RequestVote(term: nat);
    message Vote(term: nat);
    message Heartbeat(term: nat);

    role Replica {
        var decided: bool = false;
        init pre;

        phase pre {
            when received >= 2*t+1 Vote(term=0) => {
                decided = true;
                goto phase decided;
            }
        }

        phase decided {}
    }

    property agreement: agreement {
        forall p: Replica. forall q: Replica. p.decided == q.decided
    }
}
