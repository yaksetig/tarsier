protocol HotstuffChained {
    params n, t, f, gst;
    resilience: n > 3*t;
    adversary {
        model: byzantine;
        bound: f;
        timing: partial_synchrony;
        gst: gst;
        values: sign;
    }

    message Vote(height: nat, value: int);
    message QC(height: nat, value: int);
    message Commit(height: nat, value: int);

    role Replica {
        var decided: bool = false;
        init pre;

        phase pre {
            when received >= 2*t+1 QC(height=0, value=0) => {
                decided = true;
                goto phase decided;
            }
        }

        phase decided {}
    }

    property agreement: agreement {
        forall p: Replica. forall q: Replica. p.decided == q.decided
    }
}
