// Example: Reliable broadcast with cohort-selective network semantics.
// Demonstrates the cohort_selective network mode, which partitions
// recipient channels into sub-role groups sharing delivery constraints.
protocol ReliableBroadcastCohortSelective {
    params n, t, f;
    resilience: n > 3*t;

    adversary {
        model: byzantine;
        bound: f;
        auth: signed;
        network: cohort_selective;
        delivery: per_recipient;
        faults: per_recipient;
        equivocation: none;
    }

    identity Process: role key process_key;

    message Init;
    message Echo;
    message Ready;

    role Process {
        var accepted: bool = false;
        var decided: bool = false;
        var decision: bool = false;

        init waiting;

        phase waiting {
            when received >= 1 Init => {
                accepted = true;
                send Echo;
                goto phase echoed;
            }
        }

        phase echoed {
            when received distinct >= 2*t+1 Echo => {
                send Ready;
                goto phase readied;
            }
        }

        phase readied {
            when received distinct >= 2*t+1 Ready => {
                decision = true;
                decided = true;
                decide true;
                goto phase done;
            }
        }

        phase done {}
    }

    property agreement: agreement {
        forall p: Process. forall q: Process.
            (p.decided == true && q.decided == true) ==> (p.decision == q.decision)
    }
}
