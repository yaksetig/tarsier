          "depth": 8,
          "k": 10,
          "timeout_secs": 120
        },
        "spin": {
          "file": "benchmarks/cross_tool_scenarios/external_models/reliable_broadcast_buggy_disagreement.pml",
          "command_template": "{binary} -run {model_file}",
          "execution_mode": "real",
          "notes": "Unsafe scenario: buggy thresholds allow Byzantine disagreement."
        }
      }
    },
    {
      "id": "tendermint_agreement_real_spin_smoke",
      "name": "Tendermint Locking Agreement (Real SPIN Smoke)",
      "protocol_family": "tendermint",
      "property": "agreement",
