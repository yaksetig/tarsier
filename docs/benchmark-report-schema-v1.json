{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://tarsier.dev/schemas/benchmark-report-schema-v1.json",
  "title": "Tarsier Library Benchmark Report",
  "description": "Machine-readable schema for reports emitted by benchmarks/run_library_bench.py.",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema_version",
    "started_at_utc",
    "finished_at_utc",
    "config",
    "environment",
    "summary",
    "performance_gate",
    "scale_band_gate",
    "replay",
    "runs"
  ],
  "properties": {
    "schema_version": {
      "type": "integer",
      "const": 1
    },
    "started_at_utc": {
      "type": "string"
    },
    "finished_at_utc": {
      "type": "string"
    },
    "config": {
      "$ref": "#/$defs/config"
    },
    "environment": {
      "$ref": "#/$defs/environment"
    },
    "summary": {
      "$ref": "#/$defs/summary"
    },
    "performance_gate": {
      "type": "object"
    },
    "scale_band_gate": {
      "type": "object"
    },
    "replay": {
      "$ref": "#/$defs/replay"
    },
    "runs": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/run"
      }
    }
  },
  "$defs": {
    "config": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "mode",
        "solver",
        "depth",
        "k",
        "timeout_secs",
        "samples",
        "soundness",
        "fairness",
        "protocol_source",
        "manifest_mode",
        "require_pass",
        "require_expectations"
      ],
      "properties": {
        "mode": {
          "type": "string",
          "enum": [
            "quick",
            "standard",
            "proof",
            "audit"
          ]
        },
        "solver": {
          "type": "string"
        },
        "depth": {
          "type": "integer",
          "minimum": 0
        },
        "k": {
          "type": "integer",
          "minimum": 0
        },
        "timeout_secs": {
          "type": "integer",
          "minimum": 1
        },
        "samples": {
          "type": "integer",
          "minimum": 1
        },
        "soundness": {
          "type": "string",
          "enum": [
            "strict",
            "permissive"
          ]
        },
        "fairness": {
          "type": "string",
          "enum": [
            "weak",
            "strong"
          ]
        },
        "protocol_source": {
          "type": "string"
        },
        "manifest_mode": {
          "type": "boolean"
        },
        "require_pass": {
          "type": "boolean"
        },
        "require_expectations": {
          "type": "boolean"
        }
      }
    },
    "environment": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "python_version",
        "platform",
        "rustc_version",
        "z3_version",
        "cvc5_version"
      ],
      "properties": {
        "python_version": {
          "type": "string"
        },
        "platform": {
          "type": "string"
        },
        "rustc_version": {
          "type": [
            "string",
            "null"
          ]
        },
        "z3_version": {
          "type": [
            "string",
            "null"
          ]
        },
        "cvc5_version": {
          "type": [
            "string",
            "null"
          ]
        }
      }
    },
    "summary": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "total",
        "ok",
        "failed",
        "require_pass",
        "require_expectations"
      ],
      "properties": {
        "total": {
          "type": "integer",
          "minimum": 0
        },
        "ok": {
          "type": "integer",
          "minimum": 0
        },
        "failed": {
          "type": "integer",
          "minimum": 0
        },
        "require_pass": {
          "type": "boolean"
        },
        "require_expectations": {
          "type": "boolean"
        }
      }
    },
    "replay": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "harness",
        "plan_sha256",
        "result_sha256",
        "deterministic_fields",
        "nondeterministic_fields"
      ],
      "properties": {
        "harness": {
          "type": "string"
        },
        "plan_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "result_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "deterministic_fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "nondeterministic_fields": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    },
    "run": {
      "type": "object",
      "additionalProperties": true,
      "required": [
        "protocol",
        "protocol_sha256",
        "overall",
        "ok",
        "run_is_valid",
        "expectations",
        "report"
      ],
      "properties": {
        "protocol": {
          "type": "string"
        },
        "protocol_sha256": {
          "type": "string",
          "pattern": "^[a-f0-9]{64}$"
        },
        "overall": {
          "type": [
            "string",
            "null"
          ]
        },
        "ok": {
          "type": "boolean"
        },
        "run_is_valid": {
          "type": "boolean"
        },
        "expectations": {
          "type": "object"
        },
        "report": {
          "type": [
            "object",
            "null"
          ]
        }
      }
    }
  }
}
