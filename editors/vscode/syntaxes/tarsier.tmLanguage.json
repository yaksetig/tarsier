{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Tarsier",
  "scopeName": "source.tarsier",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#keywords" },
    { "include": "#property-keywords" },
    { "include": "#temporal-operators" },
    { "include": "#logical-operators" },
    { "include": "#comparison-operators" },
    { "include": "#numbers" },
    { "include": "#booleans" },
    { "include": "#types" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tarsier",
          "match": "//.*$"
        },
        {
          "name": "comment.block.tarsier",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tarsier",
          "begin": "\"",
          "end": "\""
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tarsier",
          "match": "\\b(protocol|parameters|params|resilience|adversary|pacemaker|identity|channel|equivocation|committee|message|role|phase|when|received|send|goto|decide|init|var|enum|certificate|threshold_signature|form|lock|justify|has|import|module|interface|assumes|guarantees|from|to|signer|conflicts|distinct)\\b"
        }
      ]
    },
    "property-keywords": {
      "patterns": [
        {
          "name": "keyword.other.property.tarsier",
          "match": "\\b(property|agreement|validity|safety|invariant|liveness|forall|exists)\\b"
        }
      ]
    },
    "temporal-operators": {
      "patterns": [
        {
          "name": "keyword.operator.temporal.tarsier",
          "match": "(\\[\\]|<>|\\bX\\b|\\bnext\\b|\\balways\\b|\\beventually\\b)"
        },
        {
          "name": "keyword.operator.temporal.binary.tarsier",
          "match": "\\b(U|W|R)\\b"
        },
        {
          "name": "keyword.operator.leads-to.tarsier",
          "match": "~>"
        }
      ]
    },
    "logical-operators": {
      "patterns": [
        {
          "name": "keyword.operator.logical.tarsier",
          "match": "(&&|\\|\\||==>|<=>|!)"
        }
      ]
    },
    "comparison-operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.tarsier",
          "match": "(>=|<=|==|!=|>|<|=>)"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tarsier",
          "match": "\\b\\d+\\.\\d+([eE]-?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.tarsier",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "booleans": {
      "patterns": [
        {
          "name": "constant.language.boolean.tarsier",
          "match": "\\b(true|false)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.tarsier",
          "match": "\\b(nat|int|bool|byzantine|crash|omission|authenticated|unauthenticated|signed|unsigned|weak|strong|partial_synchrony|asynchronous|full|none|exclusive|allow)\\b"
        }
      ]
    }
  }
}
