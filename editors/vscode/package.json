{
  "name": "tarsier-lang",
  "displayName": "Tarsier - Threshold Automata Language",
  "description": "Language support for Tarsier threshold automata verification (.trs files)",
  "version": "0.1.0",
  "publisher": "tarsier",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Programming Languages", "Linters"],
  "activationEvents": ["onLanguage:tarsier"],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "tarsier",
        "aliases": ["Tarsier", "trs"],
        "extensions": [".trs"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tarsier",
        "scopeName": "source.tarsier",
        "path": "./syntaxes/tarsier.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Tarsier",
      "properties": {
        "tarsier.serverPath": {
          "type": "string",
          "default": "tarsier",
          "description": "Path to the tarsier binary. The LSP server is started via 'tarsier lsp'."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
